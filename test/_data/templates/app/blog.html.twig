Template for App\Handler\BlogHandler

{% if articles is empty %}
    <div class="m-4 p-6 pb-8 rounded-lg text-center mt-2 text-xl text-wdwm-blue font-bold leading-normal">
        No tutorials are currently available.
    </div>
    {% else %}
    <div class="grid grid-cols-1 lg:grid-cols-2 xl:grid-cols-3 gap-1 md:gap-4 lg:pl-8 pl-2 lg:pr-8 pr-2">
        {% for article in articles %}
        <div class="bg-white m-4 p-6 pb-8 rounded-lg border-2 border-slate-200">
            <div class="mb-6">
                <a href="/tutorial/{{ article.slug }}" class="no-underline hover:underline font-bold"><img
                    src="/images/tutorials/{{ article.image }}" class="rounded-md"></a>
            </div>
            <p class="uppercase text-wdwm-fuschia text-sm font-bold">{{ article.publishDate|format_datetime() }}</p>
            <h3 class="text-left mb-4 mt-2 text-xl text-wdwm-blue font-bold leading-normal">
                <a href="/blog/article/{{ article.slug }}" class="no-underline">{{ article.title }}</a>
            </h3>
            <p class="text-gray-800 leading-relaxed">{{ article.synopsis }}</p>
            <p><a 
                href="/blog/article/{{ article.slug }}" 
                class="no-underline hover:underline font-bold">&#10132; Read the tutorial</a>
            </p>
        </div>
        {% endfor %}
    </div>
{% endif %}